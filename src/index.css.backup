@keyframes border-shimmer {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
}

html {
  background-color: var(--bg-color);
}

body {
  margin: 0;
  width: 100%;
  min-height: 100vh;
  background-color: var(--bg-color);
  color: var(--text-color);
  /* Transition is now controlled by the html.loaded selectors above */
  overflow-x: hidden;
}

/* Ensure ultra-black theme body is pure black immediately */
[data-theme="ultra-black"] body {
  background-color: #000000 !important;
}

a {
  font-weight: 500;
  color: var(--link-color);
  text-decoration: inherit;
}

a:hover {
  color: var(--link-hover-color);
}

h1, h2, h3 {
  color: var(--markdown-title-color); /* Use the variable for h1, h2, h3 color */
}

h1 {
  font-size: 2rem;
  line-height: 1.2;
  font-weight: 600;
  margin: 0 0 1rem 0;
  /* color property moved to the h1, h2, h3 group rule */
}

/* Basic styling for h2 and h3, if not already present elsewhere for general use */
h2 {
  font-size: 1.75rem; /* Example size */
  line-height: 1.2;
  font-weight: 600;
  margin: 0 0 0.9rem 0;
}

h3 {
  font-size: 1.5rem; /* Example size */
  line-height: 1.2;
  font-weight: 600;
  margin: 0 0 0.8rem 0;
}

/* Additional heading levels for comprehensive markdown support */
h4, h5, h6 {
  color: var(--markdown-title-color);
  font-weight: 600;
  line-height: 1.2;
}

h4 {
  font-size: 1.25rem;
  margin: 0 0 0.75rem 0;
}

h5 {
  font-size: 1.125rem;
  margin: 0 0 0.7rem 0;
}

h6 {
  font-size: 1rem;
  margin: 0 0 0.65rem 0;
}

/* Bold text styling for markdown */
strong, b {
  color: var(--bold-text-color);
  font-weight: 600;
}

button {
  border: none;
  padding: 0.6em 1.2em;
  font-size: 1rem;
  font-weight: 500;
  font-family: inherit;
  background-color: var(--button-bg);
  color: var(--button-text);
  cursor: pointer;
  transition: background-color 0.3s, color 0.3s;
}

button:focus {
  outline: none;
}

* {
  box-sizing: border-box;
}
