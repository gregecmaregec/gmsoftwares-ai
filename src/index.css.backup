@import "tailwindcss";

/* No transition during page load to prevent flash */
html {
  transition: none !important;
}

/* Apply transition after page load */
html.loaded, html.loaded body {
  transition: background-color 0.3s, color 0.3s !important;
}

/* Ensure smooth transitions for all themes including ultra-black */
html.loaded[data-theme="ultra-black"], 
html.loaded[data-theme="ultra-black"] body {
  transition: background-color 0.3s, color 0.3s !important;
}

