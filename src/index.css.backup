/* Search input border pulse animation */
@keyframes border-pulse {
  0% {
    opacity: 0.4;
  }
  50% {
    opacity: 1;
  }
  90% {
    opacity: 0.4;
  }
  100% {
    opacity: 0;
  }
}

:root {
  /* Common variables for both themes */
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
  line-height: 1.5;
  font-weight: 400;
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  
  /* Light theme (default) */
  --text-color: #374151;
  --bg-color: #F7EFE6;
  --secondary-bg: #F7E7D4;
  --pill-bg-color: #FBF0E4;
  --link-color: #1057ca;
  --link-hover-color: #2563eb;
  --button-bg: #f2f1f1;
  --button-text: #374151;
  --focus-color: rgba(59, 130, 246, 0.5);
  --markdown-title-color: #654343; /* Added for markdown title color in light mode */
  --bold-text-color: #654343; /* Bold text color for light mode */
  --user-message-text-color: #ffffff; /* User message text color for light mode */
  
  /* SVG Gradient colors for light theme */
  --brain-gradient-start: #6366f1;
  --brain-gradient-end: #8b5cf6;
  --send-gradient-start: #6366f1;
  --send-gradient-end: #8b5cf6;
  
  /* Purple border colors for search input */
  --input-border-purple-start: rgba(99, 102, 241, 0.2);
  --input-border-purple-mid: rgba(139, 92, 246, 0.25);
  --input-border-purple-end: rgba(99, 102, 241, 0.2);
  --input-border-focused: rgba(139, 92, 246, 0.4);
  
  /* User message gradient colors for light theme */
  --user-message-gradient-start: rgba(99, 102, 241, 0.7);
  --user-message-gradient-end: rgba(139, 92, 246, 0.7);
}

/* Dark theme */
[data-theme="dark"] {
  --text-color: #F5E6E6;
  --bg-color: #1E1E1E;
  --secondary-bg: #212121;
  --pill-bg-color: #212121;
  --link-color: #db2dfa;
  --link-hover-color: #93c5fd;
  --button-bg: #1f2937;
  --button-text: #e5e7eb;
  --focus-color: rgba(96, 165, 250, 0.5);
  --markdown-title-color: #FFECEC; /* Distinct purple-tinted color for titles in dark mode */
  --bold-text-color: #FFEDE8; /* Slightly purple color for bold text in dark mode */
  --user-message-text-color: #E6EDF3; /* User message text color for dark mode */
  
  /* SVG Gradient colors for dark theme - more vibrant */
  --brain-gradient-start: #8b5cf6;
  --brain-gradient-end: #c084fc;
  --send-gradient-start: #8b5cf6;
  --send-gradient-end: #c084fc;
  
  /* Purple border colors for search input - darker theme */
  --input-border-purple-start: rgba(139, 92, 246, 0.3);
  --input-border-purple-mid: rgba(192, 132, 252, 0.35);
  --input-border-purple-end: rgba(139, 92, 246, 0.3);
  --input-border-focused: rgba(192, 132, 252, 0.5);
  
  /* User message gradient colors for dark theme - more vibrant */
  --user-message-gradient-start: rgba(139, 92, 246, 0.8);
  --user-message-gradient-end: rgba(192, 132, 252, 0.8);
}

/* Ultra Black theme - Perfect for OLED devices with solarized colors */
[data-theme="ultra-black"] {
  --text-color: #F5E6E6; /* Solarized base0 - soft blue-gray */
  --bg-color: #000000; /* True black for OLED */
  --secondary-bg: #040404; /* Slightly off-black for depth */
  --pill-bg-color: #000000; /* Very dark gray for input areas */
  --link-color: #268bd2; /* Solarized blue */
  --link-hover-color: #2aa198; /* Solarized cyan */
  --button-bg: #000000;
  --button-text: #93a1a1; /* Solarized base1 - lighter than base0 */
  --focus-color: rgba(38, 139, 210, 0.4); /* Solarized blue with transparency */
  --markdown-title-color: #b58900; /* Solarized yellow for titles */
  --bold-text-color: #cb4b16; /* Solarized orange for bold text */
  --user-message-text-color: #fdf6e3; /* Solarized base3 - warm white */
  
  /* SVG Gradient colors for ultra black theme - solarized accents */
  --brain-gradient-start: #e6b800; /* Rich gold */
  --brain-gradient-end: #4a3300; /* Dark amber/bronze */
  --send-gradient-start: #e6b800; /* Rich gold */
  --send-gradient-end: #4a3300; /* Dark amber/bronze */
  
  /* Purple border colors replaced with solarized colors */
  --input-border-purple-start: rgba(38, 139, 210, 0.2); /* Solarized blue */
  --input-border-purple-mid: rgba(42, 161, 152, 0.25); /* Solarized cyan */
  --input-border-purple-end: rgba(38, 139, 210, 0.2);
  --input-border-focused: rgba(42, 161, 152, 0.4);
  
  /* User message gradient colors - solarized accent blend */
  --user-message-gradient-start: rgba(107, 85, 0, 0.9); /* Rich gold */
  --user-message-gradient-end: rgba(74, 51, 0, 0.9); /* Dark amber/bronze */
}

/* SVG gradient definitions using CSS variables */
.svg-gradients {
  position: absolute;
  width: 0;
  height: 0;
  opacity: 0;
  pointer-events: none;
}

/* Purple border effect for search input wrapper */
.search-input-wrapper {
  position: relative;
}

.search-input-wrapper::before {
  content: '';
  position: absolute;
  inset: -1px;
  border-radius: 25px;
  padding: 1px;
  background: linear-gradient(
    135deg,
    var(--input-border-purple-start),
    var(--input-border-purple-mid) 50%,
    var(--input-border-purple-end)
  );
  -webkit-mask: 
    linear-gradient(#fff 0 0) content-box, 
    linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 0;
  transition: opacity 0.3s ease;
  will-change: opacity;
  pointer-events: none;
  z-index: -1;
}

